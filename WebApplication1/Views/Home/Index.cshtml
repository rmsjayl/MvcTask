                        </div>
                        <div class="user-name__input">
                            <label for="recipient-name" class="col-form-label">Last Name:</label>
                            <input type="text" class="form-control" id="editTab1-recipient-lastName">
                        </div>

                    </div>
                    <div class="form-group">
                        <div>
                            <label for="recipient-name" class="col-form-label">Age</label>
                            <input type="text" class="form-control" id="editTab1-recipient-age">
                        </div>

                    </div>
                    <div class="form-group">
                        <div>
                            <label for="recipient-name" class="col-form-label">Salary</label>
                            <input type="text" class="form-control" id="editTab1-recipient-salary">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="updateUserRecordTableOne()">Update</button>
            </div>
        </div>
    </div>
</div>

